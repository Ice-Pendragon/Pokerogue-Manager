[
  {
    "id": "update",
    "execute-command": "/pokerogue-manager/start.sh",
    "command-working-directory": "/pokerogue-manager",
    "pass-arguments-to-command": [
      {
        "source": "string",
        "name": "{{ getenv `FOLDER_NAME` }}"
      },
      {
        "source": "string",
        "name": "update"
      }
    ],
    "trigger-rule": {
      "match": {
        "type": "payload-hmac-sha256",
        "secret": "{{ getenv `WEBHOOK_SECRET` }}",
        "parameter": {
          "source": "header",
          "name": "X-Hub-Signature-256"
        }
      }
    }
  }
]
